# =============================================================================
# Ingest System Environment Configuration Example
# Copy this file to .env and configure for your deployment
# =============================================================================

# =============================================================================
# Django Core Configuration
# =============================================================================
DEBUG=true
SECRET_KEY=change-me-to-secure-random-key-in-production

# Hosts / CSRF / CORS
ALLOWED_HOSTS=localhost,127.0.0.1,*
CSRF_TRUSTED_ORIGINS=http://localhost:8002
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8002
CORS_ALLOW_CREDENTIALS=true

# Static files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Security (disabled for development)
SECURE_SSL_REDIRECT=false
FORCE_INSECURE_HTTP=true

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=ingest
POSTGRES_USER=ingest
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_HOST=db

# Redis
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Storage Configuration (MinIO/S3)
# =============================================================================
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=change-me-in-production
AWS_STORAGE_BUCKET_NAME=advisor-docs
AWS_S3_ENDPOINT_URL=http://minio:9000

# =============================================================================
# Service Integration
# =============================================================================
CORE_BASE_URL=http://core:8000
CORE_TOKEN=change-me-in-production

# =============================================================================
# Embedding Configuration (E5 Multilingual)
# =============================================================================
EMBEDDING_PROVIDER=e5
EMBEDDING_E5_MODEL_NAME=intfloat/multilingual-e5-large
EMBEDDING_DIMENSION=1024
EMBEDDING_BATCH_SIZE=8
EMBEDDING_DEVICE=cpu
EMBEDDING_MODEL_CACHE_DIR=/app/models
EMBEDDING_TIMEOUT=30
EMBEDDING_MAX_RETRIES=3

# =============================================================================
# Localization
# =============================================================================
DISPLAY_TIME_ZONE=Asia/Tehran
DISPLAY_LOCALE=fa_IR
LANGUAGE_CODE=fa

# =============================================================================
# Logging
# =============================================================================
DJANGO_LOG_LEVEL=DEBUG

# =============================================================================
# Development vs Production Examples
# =============================================================================

# For Development:
# DEBUG=true
# SECRET_KEY=django-insecure-dev-key-change-me
# ALLOWED_HOSTS=localhost,127.0.0.1
# POSTGRES_PASSWORD=password
# AWS_SECRET_ACCESS_KEY=minioadmin123
# EMBEDDING_BATCH_SIZE=8
# EMBEDDING_DEVICE=cpu
# DJANGO_LOG_LEVEL=DEBUG

# For Production:
# DEBUG=false
# SECRET_KEY=secure-random-key-from-vault
# ALLOWED_HOSTS=app.example.com,admin.example.com
# POSTGRES_PASSWORD=secure-database-password
# AWS_SECRET_ACCESS_KEY=production-minio-secret
# EMBEDDING_BATCH_SIZE=16
# EMBEDDING_DEVICE=cpu
# DJANGO_LOG_LEVEL=INFO
