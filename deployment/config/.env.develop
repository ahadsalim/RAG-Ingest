# =============================================================================
# Development Environment Configuration
# =============================================================================

# Django Core
DEBUG=true
SECRET_KEY=dev-secret-key-change-me
DJANGO_SETTINGS_MODULE=ingest.settings.dev

# Hosts / CSRF / CORS
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost:8001,http://127.0.0.1:8001
CORS_ALLOWED_ORIGINS=http://localhost:8001,http://127.0.0.1:8001
CORS_ALLOW_CREDENTIALS=true

# Locale & Timezone
TIME_ZONE=Asia/Tehran
DISPLAY_TIME_ZONE=Asia/Tehran
DISPLAY_LOCALE=fa_IR
LANGUAGE_CODE=fa

# Static & Media
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Security (relaxed for development)
SECURE_SSL_REDIRECT=false
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=false
SECURE_HSTS_PRELOAD=false

# Logging
LOG_LEVEL=DEBUG

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=ingest_dev
POSTGRES_USER=ingest_user
POSTGRES_PASSWORD=ingest123
POSTGRES_HOST=db
POSTGRES_PORT=5432
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0

# =============================================================================
# MinIO / S3 Storage
# =============================================================================
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_STORAGE_BUCKET_NAME=legal-documents-dev
AWS_S3_ENDPOINT_URL=http://minio:9000
AWS_S3_USE_SSL=false
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# Celery Configuration
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SOFT_TIME_LIMIT=1800
CELERY_TASK_TIME_LIMIT=2100

# =============================================================================
# File Uploads
# =============================================================================
FILE_UPLOAD_MAX_MEMORY_SIZE=52428800
DATA_UPLOAD_MAX_MEMORY_SIZE=52428800

# =============================================================================
# Service Integration
# =============================================================================
BRIDGE_TOKEN=dev-bridge-token-12345
CORE_BASE_URL=http://core:8000
CORE_TOKEN=dev-bridge-token-123

# =============================================================================
# Embedding Configuration (E5 Multilingual)
# =============================================================================
EMBEDDING_PROVIDER=e5
EMBEDDING_E5_MODEL_NAME=intfloat/multilingual-e5-large
EMBEDDING_DIMENSION=1024
EMBEDDING_BATCH_SIZE=8
EMBEDDING_DEVICE=cpu
EMBEDDING_MODEL_CACHE_DIR=/app/models
EMBEDDING_TIMEOUT=30
EMBEDDING_MAX_RETRIES=3
