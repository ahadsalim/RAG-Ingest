# =============================================================================
# Production Environment Configuration
# =============================================================================

# Django Core
DEBUG=False
SECRET_KEY=change-me-to-secure-random-key-in-production

# Hosts / CSRF / CORS
ALLOWED_HOSTS=admin.example.com,app.example.com,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://admin.example.com,https://app.example.com,http://admin.example.com,http://app.example.com,http://localhost:8001,http://127.0.0.1:8001
CORS_ALLOWED_ORIGINS=https://app.example.com,http://app.example.com,http://localhost:8001
CORS_ALLOW_CREDENTIALS=true

# Proxy settings (enabled for production behind Nginx Proxy Manager)
USE_X_FORWARDED_HOST=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Static files (served by web server in production)
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Security (enabled for production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=ingest
POSTGRES_USER=ingest
POSTGRES_PASSWORD=secure-password-change-me
POSTGRES_HOST=db

# Redis (no password for internal Docker network)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
